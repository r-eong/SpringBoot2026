package com.green.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

import com.green.SamplePjt3Application;

@Controller
public class BookRentController {
	
//	도서 정보 입력
	@GetMapping("/book/rental")
	public String bookRentalForm() {
		System.out.println("bookRentalForm()");
		
		return "bookRentalForm";
	}
	
//	대여 도서 출력
	@GetMapping("/book/rentalProc")
	public ModelAndView bookRentalProc(
			@RequestParam("bookName") String bookName,
			@RequestParam("writer") String writer,
			@RequestParam("isbn") String isbn,
			@RequestParam("rentUser") String rentUser
			) {
		System.out.println("bookRentalProc()");
		
		ModelAndView model = new ModelAndView();
		
		model.setViewName("bookRentProc");
		
		model.addObject("bookName", bookName);
		model.addObject("writer", writer);
		model.addObject("isbn", isbn);
		model.addObject("rentUser", rentUser);
		
		return model;
	}
}
