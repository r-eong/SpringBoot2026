package com.green.controller;

import java.util.ArrayList;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

import com.green.SamplePjt3Application;

@Controller
public class BookRentController {
	ArrayList<String> books = new ArrayList<String>();
	
//	도서 정보 입력
	@GetMapping("/book/rental")
	public String bookRentalForm() {
		System.out.println("bookRentalForm()");
		
		return "bookRentForm";
	}
	
//	대여 도서 출력
	@GetMapping("/book/rentalProc")
	public ModelAndView bookRentalProc(
			@RequestParam("bookName") ArrayList<String> bookName,
			@RequestParam("writer") ArrayList<String> writer,
			@RequestParam("isbn") ArrayList<String> isbn,
			@RequestParam("rentUser") ArrayList<String> rentUser
			) {
		System.out.println("bookRentalProc()");

		ModelAndView modelnview = new ModelAndView();
		
		modelnview.setViewName("bookRentProc");
		
		modelnview.addObject("bookName", bookName);
		modelnview.addObject("writer", writer);
		modelnview.addObject("isbn", isbn);
		modelnview.addObject("rentUser", rentUser);
		
		return modelnview;
	}
	
}
